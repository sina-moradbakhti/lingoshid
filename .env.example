# Production Environment Configuration for lingoshid.com
# Copy this file to .env for production deployment

# ============================================
# Database Configuration
# ============================================
DB_HOST=database
# DB_PORT: Port for HOST machine access (3306 for default, 3307 if port conflict)
# Note: Containers always use 3306 internally, this only affects host access
DB_PORT=3306
DB_USERNAME=lingoshid_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_MIN_16_CHARS
DB_NAME=lingoshid

# MySQL Root Password
MYSQL_ROOT_PASSWORD=CHANGE_THIS_ROOT_PASSWORD_MIN_16_CHARS

# ============================================
# JWT Configuration
# ============================================
# IMPORTANT: Must be at least 32 characters
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_A_VERY_STRONG_SECRET_KEY_MINIMUM_32_CHARACTERS

# ============================================
# Application Configuration
# ============================================
NODE_ENV=production
PORT=3000
FRONTEND_PORT=80

# TypeORM Configuration
# TYPEORM_SYNC=true: Auto-create/update database tables (for initial setup)
# TYPEORM_SYNC=false: Disable auto-sync (for production with existing data)
TYPEORM_SYNC=true

# ============================================
# CORS Configuration (Important!)
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://admin.lingoshid.com,https://lingoshid.com,https://landing.lingoshid.com

# Frontend URL (used by backend)
FRONTEND_URL=https://admin.lingoshid.com

# ============================================
# Domain Configuration
# ============================================
ADMIN_DOMAIN=admin.lingoshid.com
API_DOMAIN=server.lingoshid.com
MAIN_DOMAIN=lingoshid.com

# ============================================
# SSL/TLS Configuration
# ============================================
# These are handled by nginx reverse proxy
# SSL_CERT_PATH=/etc/letsencrypt/live/
# SSL_KEY_PATH=/etc/letsencrypt/live/

# ============================================
# Optional: Email Configuration (for future use)
# ============================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@lingoshid.com

# ============================================
# Optional: Storage Configuration (for future use)
# ============================================
# UPLOAD_PATH=/app/uploads
# MAX_FILE_SIZE=50MB

# ============================================
# Optional: Monitoring (for future use)
# ============================================
# SENTRY_DSN=your-sentry-dsn
# LOG_LEVEL=info

# ============================================
# SECURITY REMINDER
# ============================================
# Before deploying to production:
# 1. Change ALL passwords and secrets above
# 2. Use strong, unique passwords (16+ characters)
# 3. JWT_SECRET must be at least 32 characters
# 4. Never commit this file to Git
# 5. Keep backups of this file securely
# 6. Update CORS_ORIGINS with your actual domains
